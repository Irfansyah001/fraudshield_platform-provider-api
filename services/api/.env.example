# Konfigurasi Environment
# Salin file ini ke .env dan perbarui nilainya sesuai kebutuhan

# Konfigurasi Server
PORT=4000
NODE_ENV=development

# Konfigurasi Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=fraudshield

# Konfigurasi JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h

# Konfigurasi API Key (pepper opsional untuk keamanan tambahan)
API_KEY_HASH_SECRET=optional-pepper-for-api-key-hashing

# Konfigurasi CORS
CORS_ORIGIN=*

# Pembatasan Request (Rate Limiting)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

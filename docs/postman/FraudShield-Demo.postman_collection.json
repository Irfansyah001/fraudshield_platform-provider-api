{
  "info": {
    "_postman_id": "3cdb8df4-7fdd-4f3c-a6a5-5f8decd9b123",
    "name": "FraudShield Demo (Auto Register + 2x Score)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1) Register (sets accessToken)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const body = pm.response.json();",
              "pm.test('register success', () => pm.expect(body.success).to.eql(true));",
              "pm.collectionVariables.set('accessToken', body.data.access_token);",
              "pm.collectionVariables.set('userEmail', body.data.user.email);"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Demo User\",\n  \"email\": \"demo+{{$guid}}@example.com\",\n  \"password\": \"Password123!\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "register"
          ]
        }
      }
    },
    {
      "name": "2) Create API Key (sets apiKey)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const body = pm.response.json();",
              "pm.test('create key success', () => pm.expect(body.success).to.eql(true));",
              "pm.collectionVariables.set('apiKey', body.data.api_key);"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Demo Key\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/keys",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "keys"
          ]
        }
      }
    },
    {
      "name": "3) Score Transaction #1",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-Key",
            "value": "{{apiKey}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"external_txn_id\": \"txn_{{$guid}}\",\n  \"account_id\": \"acc_demo_001\",\n  \"amount\": 150.0,\n  \"currency\": \"USD\",\n  \"available_balance\": 500.0,\n  \"merchant_id\": \"merchant_789\",\n  \"ip\": \"192.168.1.1\",\n  \"country\": \"US\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v1/score",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "score"
          ]
        }
      }
    },
    {
      "name": "4) Score Transaction #2 (forces DECLINE via insufficient funds)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-Key",
            "value": "{{apiKey}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"external_txn_id\": \"txn_{{$guid}}\",\n  \"account_id\": \"acc_demo_001\",\n  \"amount\": 999999.0,\n  \"currency\": \"USD\",\n  \"available_balance\": 10.0,\n  \"merchant_id\": \"merchant_789\",\n  \"ip\": \"192.168.1.1\",\n  \"country\": \"US\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v1/score",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "score"
          ]
        }
      }
    },
    {
      "name": "5) Verify Usage Logs (stats/endpoints)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/stats/endpoints",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "stats",
            "endpoints"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000"
    },
    {
      "key": "accessToken",
      "value": ""
    },
    {
      "key": "apiKey",
      "value": ""
    },
    {
      "key": "userEmail",
      "value": ""
    }
  ]
}
